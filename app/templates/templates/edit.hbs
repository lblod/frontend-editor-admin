{{!-- Page to edit template --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit template')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete template.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new template" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of template. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>title</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='title' editable=true}}</td>
</tr>
      <tr>
        <td>{{t 'matches'}}</td>
        <td align='middle'>{{edit-string-set data=changeset.matches tagName='ul' classes='string-set'}}</td>
      </tr>
      <tr>
        <td>body</td>
        <td align='middle'>{{textarea value=changeset.body placeholder='body' rows=6 cols=80}}</td>
      </tr>
      <tr>
      <td>contexts</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='contexts' editable=true}}</td>
</tr>
      <tr>
      <td>disabledInContexts</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='disabledInContexts' editable=true}}</td>
</tr>

        
        

    </tbody>
  </table>
</div>
{{/with}}
