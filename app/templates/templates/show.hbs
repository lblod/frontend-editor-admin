{{!-- Page to show details of templates --}}
<div class="details">
  <h2 class="title">{{t (humanize 'template details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit template
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "templates" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "templates.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of template. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'title'}}</td>
        {{handle-attribute model=model attribute='title' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'matches'}}</td>
        <td>{{display-attribute-string-set model=model attribute='matches' tagName='ul' innerTagName='li' classes='string-set'}}</td>
      </tr>
      <tr>
        <td>{{t 'body'}}</td>
        {{handle-attribute model=model attribute='body' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'contexts'}}</td>
        <td>{{display-attribute-string-set model=model attribute='contexts' tagName='ul' innerTagName='li' classes='string-set'}}</td>
      </tr>
      <tr>
        <td>{{t 'disabledInContexts'}}</td>
        <td>{{display-attribute-string-set model=model attribute='disabledInContexts' tagName='ul' innerTagName='li' classes='string-set'}}</td>
      </tr>


    </tbody>
  </table>
</div>
